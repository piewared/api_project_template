# Environment Configuration
APP_ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./database.db
{%- if cookiecutter.use_postgres == 'y' %}
# PostgreSQL Example:
# DATABASE_URL=postgresql://user:password@localhost:5432/{{cookiecutter.project_slug}}_db
{%- endif %}

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT/OIDC Configuration
# JWT_ISSUER_JWKS_MAP={"https://your-issuer.auth0.com/":"https://your-issuer.auth0.com/.well-known/jwks.json"}
# JWT_AUDIENCES=api://default
# JWT_ALLOWED_ALGOS=RS256,RS512,ES256,ES384
# JWT_UID_CLAIM=sub
# JWT_ROLE_CLAIM=https://your.app/roles
# JWT_SCOPE_CLAIM=scope

{%- if cookiecutter.use_redis == 'y' %}
# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
{%- endif %}

# Logging
LOG_LEVEL=INFO